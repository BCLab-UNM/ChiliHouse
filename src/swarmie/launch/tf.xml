<launch>

  <arg name="name"/>
  <arg name="simulation"/>

  <!-- Simulated camera is in a slightly different position and orientation. -->
  <group if="$(arg simulation)">
    <node name="stfBase2Cam"
          pkg="tf2_ros"
          type="static_transform_publisher"
          args="0.145 -0.0162 0.1755 -1.570796 0 -2.215 $(arg name)/base_link $(arg name)/camera_link"
          respawn="true">
    </node>
  </group>

  <group unless="$(arg simulation)">
    <node name="stfBase2Cam"
          pkg="tf2_ros"
          type="static_transform_publisher"
          args="0.12 -0.02 0.195 -1.570796 0 -2.09 $(arg name)/base_link $(arg name)/camera_link"
          respawn="true">
    </node>
  </group>

</launch>
