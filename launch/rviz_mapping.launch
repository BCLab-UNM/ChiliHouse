<launch>
  <arg name="rovername" default="achilles" />

  <node pkg="grid_map_visualization" type="grid_map_visualization" name="$(arg rovername)_RVIZ_converter" output="screen">
    <rosparam command="load" file="$(find mobility)config/grid_map_rviz.yaml" />
    <rosparam param="grid_map_topic" subst_value="true">/$(arg rovername)/grid_map</rosparam>
  </node>
  <node pkg="rviz" type="rviz" name="$(arg rovername)_RVIZ" output="screen" args="-d $(find mobility)/config/rviz_view.rviz -f $(arg rovername)/odom" required="true">   
  </node>
</launch>
